{
    "name": "suilven/silverstripe-manticore-search",
    "type": "library",
    "description": "Search SilverStripe using Manticore",
    "keywords": [
        "freetext",
        "manticore",
        "search",
        "SilverStripe"
    ],
    "homepage": "https://github.com/suilven/silverstripe-manticore-search",
    "license": "MIT",
    "authors": [
        {
            "name": "Gordon Anderson",
            "email": "gordon.b.anderson@gmail.com",
            "homepage": "https://github.com/gordonbanderson",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7",
        "manticoresoftware/manticoresearch-php": "dev-master",
        "silverstripe/cms": "^4",
        "suilven/freetextsearch": "dev-master"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.5",
        "phpstan/phpstan": "^0.12.25",
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Suilven\\ManticoreSearch\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Suilven\\ManticoreSearch\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "checkpsr2": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fixpsr2": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
