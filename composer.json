{
    "name": "suilven/sphinxsearch",
    "type": "library",
    "description": "Search SilverStripe using Sphinx",
    "keywords": [
        "suilven",
        "sphinxsearch"
    ],
    "homepage": "https://github.com/suilven/sphinxsearch",
    "license": "MIT",
    "authors": [
        {
            "name": "Gordon Anderson",
            "email": "gordon.b.anderson@gmail.com",
            "homepage": "https://github.com/gordonbanderson",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7",
        "manticoresoftware/manticoresearch-php": "dev-master",
        "silverstripe/recipe-cms": "4.5",
        "suilven/freetextsearch": "dev-master"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.5",
        "phpstan/phpstan": "^0.12.25",
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Suilven\\ManticoreSearch\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Suilven\\ManticoreSearch\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "install-frameworkmissing.html",
            "install.php",
            "web.config"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
